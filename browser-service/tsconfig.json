{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020", "DOM"],
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node"
  },
  "ts-node": {
    "skipProject": false,
    "compilerOptions": {
      "module": "commonjs",
      "lib": ["ES2020", "DOM"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}